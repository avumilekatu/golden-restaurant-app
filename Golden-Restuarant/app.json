 import React from 'react';
import { NavigationContainer } from '@react-navigation/native';
import { createStackNavigator, CardStyleInterpolators } from '@react-navigation/stack';
import { StatusBar } from 'expo-status-bar';

// Import screens
import HomeScreen from './screens/HomeScreen';
import AddMenuScreen from './screens/AddMenuScreen';
import MenuListScreen from './screens/MenuListScreen';

const Stack = createStackNavigator();

export default function App() {
  return (
    <NavigationContainer>
      <StatusBar style="light" />
      <Stack.Navigator
        screenOptions={{
          headerStyle: { backgroundColor: '#b8860b' }, // golden brown
          headerTintColor: '#fff',
          headerTitleStyle: { fontWeight: 'bold' },
          cardStyleInterpolator: CardStyleInterpolators.forHorizontalIOS,
        }}
      >
        <Stack.Screen name="Home" component={HomeScreen} options={{ title: 'Golden Restaurant' }} />
        <Stack.Screen name="AddMenu" component={AddMenuScreen} options={{ title: 'Add Menu Item' }} />
        <Stack.Screen name="MenuList" component={MenuListScreen} options={{ title: 'Menu List' }} />
      </Stack.Navigator>
    </NavigationContainer>
  );
}
